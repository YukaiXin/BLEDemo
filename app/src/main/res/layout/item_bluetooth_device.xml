<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_tou_unlink"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="16.5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/tv_bluetooth_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/title_color"
        android:layout_marginLeft="14.5dp"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@+id/iv_img"
        app:layout_constraintBottom_toBottomOf="@id/iv_img"
        app:layout_constraintLeft_toRightOf="@+id/iv_img"/>

    <TextView
        android:id="@+id/tv_bluetooth_device_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/body_text_size_13"
        android:textColor="@color/tinge_text_color"
        app:layout_constraintLeft_toLeftOf="@+id/tv_bluetooth_device_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_bluetooth_device_name"/>

    <TextView
        android:id="@+id/tv_update_hardware"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/must_update_hardware"
        android:visibility="gone"
        android:drawablePadding="7dp"
        android:drawableLeft="@mipmap/icon_zhuyi"
        android:textColor="#FFFE7171"
        android:textSize="12sp"
        android:layout_marginRight="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_right"/>

    <ImageView
        android:id="@+id/iv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_more_right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="21.5dp"
        />

</android.support.constraint.ConstraintLayout>